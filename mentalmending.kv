<ToolBar>
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        MDToolbar:
            md_bg_color: app.theme_cls.primary_dark
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        MDFloatingActionButton:
            icon: 'pencil'
            user_font_size: "40sp"
            md_bg_color: app.theme_cls.primary_light
            on_press: app.load_page('form')

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        MDIconButton:
            icon: 'android'
            user_font_size: "40sp"
            md_bg_color: app.theme_cls.primary_light
            on_press: app.load_page('mainhub')
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        MDIconButton:
            icon: 'language-python'
            user_font_size: "40sp"
            md_bg_color: app.theme_cls.primary_light
            on_press: app.load_page('bosshub')
