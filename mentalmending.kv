#:kivy 1.0.9
#:include ui/form.kv

<Form>:
    FormBase:
    ToolBar:
    Label:
        text: 'Soy screen1'
        color: [1, 1, 0, 1]

<MainHub>
    Label:
        text: 'Soy screen2'
        color: [1, 1, 0, 1]
    ToolBar:

<BossHub>
    ToolBar:
    Label:
        text: 'Soy screen3'
        color: [0, 1, 0, 1]

<ToolBar>
    canvas:
        Color:
            rgba: [0.285, 0.29, 1, 0.8]
        Rectangle:
            size: root.width, (root.height / 10)
            pos: self.pos
    FloatLayout:
        Button:
            size_hint: None, None
            size: 60 , (root.height / 10.5)
            pos: (root.width / 20), 0
            # background_color: 0, 0, 0, 0
            background_normal: 'icons/add.png'
            background_down: 'icons/add.png'
            on_press: app.load_page('form')
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

            # Image:
            #     source: 'icons/add.png'

        Button:
            text: 'hola2'
            size_hint: None, None
            size: 60, (root.height / 10.5)
            pos: (root.width / 2.6), 0
            background_normal: 'icons/hub.png'
            background_down: 'icons/hub.png'
            on_press: app.load_page('mainhub')
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
        Button:
            size_hint: None, None
            size: 60, (root.height / 10.5)
            pos: (root.width / 1.4), 0
            background_normal: 'icons/boss.png'
            background_down: 'icons/boss.png'
            on_press: app.load_page('bosshub')
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
