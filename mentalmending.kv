#:kivy 1.7.0
#:include ui/form.kv
#:include ui/mainhub.kv
#:include ui/bosshub.kv
#:include ui/battlehub.kv

<Form>:
    FormBase:
    ToolBar:

<MainHub>
    mainHubBase: mainHubBase
    MainHubBase:
        id: mainHubBase
    ToolBar:

<BossHub>
    BossHubBase:
    ToolBar:
    Label:
        text: '10/10'
        font_name: "pixel"
        color: [0, 0, 0, 1]
        size: (root.width), (root.height)
        size_hint: None, None

<BattleHub>
    battleHubBase: battleHubBase

    BattleHubBase:
        id: battleHubBase
        battleHubBaseAux: battleHubBaseAux
    BattleHubBaseAux:
        id: battleHubBaseAux


<ToolBar>
    canvas:
        Color:
            rgba: [0.285, 0.29, 1, 0.8]
        Rectangle:
            size: root.width, (root.height / 10)
            pos: self.pos
    FloatLayout:
        Button:
            size_hint: None, None
            size: 60 , (root.height / 10.5) 
            pos: (root.width / 20), 0
            background_normal: 'icons/add.png'
            background_down: 'icons/add.png'
            on_press: app.load_page('form')
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

        Button:
            size_hint: None, None
            size: 60, (root.height / 10.5) 
            pos: (root.width / 2.35), 0
            background_normal: 'icons/hub.png'
            background_down: 'icons/hub.png'
            on_press: app.load_page('mainhub')
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
        Button:
            size_hint: None, None
            size: 60, (root.height / 10.5) 
            pos: (root.width / 1.3), 0
            background_normal: 'icons/boss.png'
            background_down: 'icons/boss.png'
            on_press: app.load_page('bosshub')
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
