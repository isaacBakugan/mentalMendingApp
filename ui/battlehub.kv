#:kivy 1.7.0
<BattleHubBase>
    enemy: enemy
    canvas.before:
        Color:
            rgba: [self.backgroundColorR, self.backgroundColorG, self.backgroundColorB, 0.9]
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        Color:
            rgba: [0.95, 0, 1, root.shieldTransparency]
        Ellipse:
            pos: (root.width /3), (root.height /1.6)
            size: (root.width/4), (root.width/4)
    canvas:
        Color:
            rgba: [1, 0, 0, self.hitA]
        Rectangle:
            pos: self.pos
            size: self.size


    FloatLayout:
        Image:
            source: root.enemySource
            pos: (root.width /2.8), (root.height /1.5)
            id: enemy

            # size_hint: None, None
            # size: (root.width / 2), (root.height / 2)

        # Button:
        #     text: 'a'
        #     size_hint: None, None
        #     size: root.size
<BattleHubBaseAux>
    hitbox: hitbox
    Button:
        pos: (root.touch_X - dp(5)), (root.touch_Y - dp(5))
        background_color: 0, 0, 0, 0
        id: hitbox
        size_hint: None, None
        size: (dp(9), dp(9))
